/* pages/boss/boss.wxss */
.header{
  width: 100%;
  height: 400rpx;
  background-color: #5CD5C7;
}
.header image{
  width:65%;
  height: 110rpx;
  margin-left:130rpx;
  margin-top: 80rpx;
}
.search{
  margin: 0 auto;
  margin-top: 60rpx;
  width: 90%;
  height: 70rpx;
  line-height:70rpx;
  border-radius: 30rpx;
  background-color: white;
  overflow: hidden;
}
.header .search .input_search{
  margin-left: 25rpx;
  margin-top: 8rpx;
  float: left;
  font-size: 30rpx;
  color: lightgray;
}
.header .search .btn_search{
  padding-left:240rpx;
  font-size: 30rpx;
  border:none;
  background-color: white;
  color: #5CD5C7;
}
.wrap{
  width: 100%;
}
.wrap .sign{
  width: 90%;
  margin:  0 auto;
  margin-top:40rpx;
}
.wrap .sign image{
  width: 100rpx;
  height: 100rpx;
}
.wrap .sign .name{
  position: relative;
  top: -30rpx;
  left: 20rpx;
  font-size: 30rpx;
 }
.wrap .sign .buttom{
  margin-top: 20rpx;
 }
.wrap .sign .buttom navigator{
  padding: 8px 16px;
  font-size: 28rpx;
  color: #7e8793;
  line-height: 13px;
  background: #f5f8f9;
  border-radius: 100px;
  margin: 0 8px 8px 0;
  display: inline-block;
 }
 .wrap .sign .buttom navigator:hover{
   background-color: rgb(170, 231, 221);
   color: green;
 }
.add{
  width: 100%;
  height: 150rpx;
  background-color: white;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  line-height:150rpx;
  background-color: #5CD5C7;
}
.footer image{
  width: 100rpx;
  height:100rpx;
  vertical-align: middle;
  margin-left: 50rpx;
 }
.footer .follow{
  font-size: 32rpx;
  color: white;
  margin-left: 10rpx;
}
.footer .register{
  float: right;
  width: 200rpx;
  font-size: 30rpx;
  margin-top: 40rpx;
  border-radius: 150rpx;
  color: #7e8793;
}




